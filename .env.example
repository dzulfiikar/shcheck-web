# shcheck-web Environment Configuration
#
# Copy this file to .env and update the values for your environment

# ============================================
# Frontend Configuration
# ============================================

# API URL for frontend to communicate with backend
# In production, this should be relative (e.g., /api) or the full URL
VITE_API_URL=http://localhost:3001

# ============================================
# Backend Configuration
# ============================================

# Node environment (development, production, test)
NODE_ENV=production

# Server port
PORT=3001

# ============================================
# Database Configuration
# ============================================

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/shcheck

# Individual database settings (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=shcheck

# ============================================
# Redis Configuration
# ============================================

# Redis connection string
REDIS_URL=redis://redis:6379

# ============================================
# Worker Configuration
# ============================================

# Number of concurrent jobs the worker can process
WORKER_CONCURRENCY=5
